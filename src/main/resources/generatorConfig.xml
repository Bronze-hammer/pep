<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

    <!-- 数据库驱动包位置 -->
    <classPathEntry location="D:\jarFiles\mysql-connector-java-6.0.6.jar" />

    <context id="DB2Tables" targetRuntime="MyBatis3">

        <!-- 数据库链接URL、用户名、密码 -->
        <jdbcConnection
                driverClass="com.mysql.cj.jdbc.Driver"
                connectionURL="jdbc:mysql://localhost:3306/cliff?serverTimezone=UTC&amp;characterEncoding=utf-8&amp;useSSL=false"
                userId="root" password="xu123456">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!-- 生成模型的包名和位置 -->
        <javaModelGenerator targetPackage="com.koala.pep.model" targetProject="D:\IDEAProjects\pep\src\main\java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!-- 生成的映射文件包名和位置   -->
        <sqlMapGenerator targetPackage="mapping" targetProject="D:\IDEAProjects\pep\src\main\resources">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!-- 生成DAO的包名和位置
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.cliff.dao" targetProject="pep\src\main\java">
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>
        -->
        <!-- 要生成那些表(更改tableName和domainObjectName就可以) -->
        <table
                tableName="pep_user" domainObjectName="User"
                enableCountByExample="true" enableUpdateByExample="true" enableDeleteByExample="true" enableSelectByExample="true" selectByExampleQueryId="true"
        />
    </context>
</generatorConfiguration>